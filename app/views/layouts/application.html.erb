<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <h1>Cake</h1>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <% if admin_signed_in? %>
                <%= link_to admin_items_path, class: 'nav-link text-white'  do%>
                <p>商品</p>
                <% end %>
                <%= link_to admin_session_path, class: 'nav-link text-white' do%>
                <p>ログイン</p>
                <% end %>
                <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-white' do%>
                <p>ログアウト</p>
                <% end %>
                <%= link_to admin_genres_path, class: 'nav-link text-white' do%>
                <p>ジャンル</p>
                <% end %>
                <%= link_to admin_customers_path, class: 'nav-link text-white' do%>
                <p>顧客一覧</p>
                <% end %>
                <%= link_to admin_order_details_path, class: 'nav-link text-white' do%>
                <p>注文履歴一覧</p>
                <% end %>
                <% elsif customer_signed_in? %>
                <%= link_to public_customers_path, class: 'nav-link text-white' do%>
                <p>マイページ</p>
                <% end %>
                <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-white' do%>
                <p>ログアウト</p>
                <% end %>
                <%= link_to public_items_path, class: 'nav-link text-white' do%>
                <p>商品一覧</p>
                <% end %>
                <%= link_to public_cart_items_path, class: 'nav-link text-white' do%>
                <p>商品カゴ</p>
                <% end %>
                <% else %>
                <% end %>

              </ul>
            </div>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
