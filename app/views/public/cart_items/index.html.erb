<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>商品カゴ</h1>
<%= form_with model: @cart_item,url:new_public_order_path, method: :get do |f| %>
<table>
<% @cart_items.each do |cart_item| %>
<thead>
  <tr>
    <td>商品画像</td>
    <td>商品名</td>
    <td>個数</td>
    <td>値段</td>
    <td>単価(税込)</td>
    <td>小計</td>
    <td>合計</td>
  </tr>
</thead>
<tbody>
  <tr>
    <td><%= image_tag cart_item.item.get_image %></td>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.amount %></td>
    <td><%= cart_item.item.price%></td>
    <td><%= cart_item.item.with_tax_price%></td>
    <td>¥<%= @total.round.to_s(:delimited)%></td>
    <%= f.hidden_field :cart_items,value: @cart_item %>
    <td>¥<%= cart_item.subtotal%></td>
  </tr>
</tbody>
</table>
<%= f.submit '注文画面へ', class: "btn btn-success"%>
<%= link_to '買い物を続ける', public_customers_path, class: "btn btn-success"%>
<br><%= link_to '購入取り消し', public_cart_item_path(cart_item), method: :delete, class: "btn btn-success btn-sm btn-block sign_up"%>
<% end %>
<% end %>
<br><%= link_to '空にする', public_cart_items_path, method: :delete, class: "btn btn-success btn-sm btn-block sign_up"%>
</div>
  </div>
    </div>

