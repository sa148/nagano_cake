<h1>商品カゴ</h1>
<% @items.each do |item| %>
<table>
<thead>
  <th>商品画像</th>
  <th>商品名</th>
  <th>商品説明</th>
  <th>値段</th>
</thead>
<tbody>
  <tr>
      <th><%= image_tag item.get_image %></th>
      <th><%= item.name%></th>
      <th><%= item.introduction%></th>
      <th><%= item.price%></th>
  </tr>
</tbody>
</table>
<% end %>
<table>
<thead>
    <th>単価(税込)</th>
    <th>小計</th>
</thead>
<tbody>
<% @cart_items.each do |cart_item| %>
    <tr>
        <td><%= cart_item.item.with_tax_price%></td>
        <td><%= cart_item.subtotal%></td>
        <% @合計金額 +=  (cart_item.item.price * 1.1).floor * cart_item.amount %>
    </tr>
</tbody>
</table>
<% end %>
<%= form_with model: @order,url:public_orders_path do |f| %>
<%= f.submit '注文画面へ'%>

