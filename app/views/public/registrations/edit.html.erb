<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>登録情報変更 </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<div class="field">
  <%= f.label :苗字 %><br>
  <%= f.text_field :last_name %>
  </div>

  <div class="field">
  <%= f.label :名前 %><br>
  <%= f.text_field :first_name %>
  </div>

　<div class="field">
  <%= f.label :苗字カナ %><br>
  <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
  <%= f.label :名前カナ %><br>
  <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
  <%= f.label :住所 %><br>
  <%= f.text_field :address %>
  </div>

  <div class="field">
  <%= f.label :郵便番号 %><br>
  <%= f.text_field :postal_code %>
  </div>

  <div class="field">
  <%= f.label :電話番号 %><br>
  <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録情報変更" %>
  </div>
  <%= link_to "退会確認画面", customers_unsubscribe_path, class: "btn btn-success btn-sm btn-block sign_up" %>
<% end %>
</div>
  </div>
    </div>