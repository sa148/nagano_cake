<h1>商品一覧</h1>
<table>
  <tbody>
    <tr>
      <th>商品画像</th>
      <th>商品名</th>
      <th>商品説明</th>
      <th>値段</th>
    </tr>
   </tbody>
</table>
<table>
  <tbody>
    <tr>
<% @items.each do |item|%>
    <th><%#= image%></th>
    <th><%= item.name%></th>
    <th><%= item.introduction%></th>
    <th><%= item.price%></th>
   </tr>
  </tbody>
</table>
<% end %>
<%#= link_to "商品詳細", items_path(items[:id]), class: 'nav-link text-white'%>