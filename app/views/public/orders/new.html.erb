<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>注文情報入力</h1>
<% @cart_items.each do |cart_item| %>
<%= form_with model: @order,url:public_orders_confirm_path do |f| %>
<table>
  <thead>
    <tr>
      <td>商品画像</td>
      <td>商品名</td>
      <td>個数</td>
      <td>合計金額</td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= image_tag cart_item.item.get_image %></td>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.amount %></td>
      <td>¥<%= cart_item.subtotal%></td>
    </tr>
  </tbody>
</table>
<h2>支払い方法</h2>
<%= f.radio_button :payment_method, "credit_card" %>
<%= f.label :payment_method, "クレジットカード" %>
<%= f.radio_button :payment_method, "transfer" %>
<%= f.label :payment_method, "銀行振込" %>
<h2>お届け先</h2>
<%= f.select :address_id, current_customer.delivers.all.map { |address| [address.name, address.id] } %>
<%= f.submit '注文確認画面へ',class: "btn btn-success"%>
<% end %>
<% end %>
</div>
  </div>
    </div>
