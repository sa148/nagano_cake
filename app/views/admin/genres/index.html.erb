<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>ジャンル一覧</h1>
<table>
  <tbody>
    <tr>
      <td>ジャンル</td>
    </tr>
   </tbody>
</table>
<% @genres.each do |genre| %>
<table>
  <tbody>
    <tr>
      <th><%= genre.name%></th>
      <th><%= link_to 'ジャンル変更', edit_admin_genre_path(genre.id),class: "btn btn-success"%></th>
    </tr>
  </tbody>
</table>
<% end %>

<%= form_with model: @genre,url:admin_genres_path do |f| %>
<div class="field">
  <%= f.label :ジャンル %><br>
  <%= f.text_field :name %>
</div>
<br><%= f.submit '新ジャンル' %>
<% end %>
</div>
  </div>
    </div>